@inherits LayoutComponentBase
@using BPSR_SharpCombat.Components.Shared

@* Background settings applier *@
<BackgroundApplier />

<div class="app-root">
@* Thin draggable title bar for the settings window *@
<div class="titlebar">
    <div class="titlebar-left">Settings</div>
    <div class="titlebar-right no-drag">
        <button id="settings-close-btn" class="btn-close" title="Close"
                onclick="(function(){ console.log('DOM: settings close button clicked'); try{ if(window.electron?.appControl?.closeCurrentWindow) window.electron.appControl.closeCurrentWindow(); else window.close(); } catch(e){ console.error('DOM settings close error', e); try{ window.close(); } catch(_){} } })()">
            âœ•
        </button>
    </div>
</div>

<div class="overlay-root">
    @Body
</div>

