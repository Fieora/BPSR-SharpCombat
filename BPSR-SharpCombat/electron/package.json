{
  "name": "bpsr-sharpcombat-electron",
  "version": "0.6.0",
  "description": "Electron wrapper for BPSR-SharpCombat (loads Blazor wwwroot)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "node ./build.js --package",
    "build:all": "node ./build.js",
    "build:dev": "node ./build.js --devStart",
    "build:publish": "node ./build.js --publishRuntime=win-x64 --selfContained=true",
    "package-win": "node ./build.js --publishRuntime=win-x64 --selfContained=true --package --platform=win",
    "package-linux": "node ./build.js --publishRuntime=linux-x64 --selfContained=true --package --platform=linux",
    "package-mac": "node ./build.js --publishRuntime=osx-x64 --selfContained=true --package --platform=darwin"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "electron-updater": "^5.3.0"
  },
  "build": {
    "appId": "com.bpsr.sharpcombat",
    "productName": "BPSR SharpCombat",
    "artifactName": "BPSR-SharpCombat-Setup-${version}.${ext}",
    "files": [
      "app/**/*",
      "server/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "asarUnpack": [
      "server/**"
    ],
    "directories": {
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Fieora",
        "repo": "BPSR-SharpCombat"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "guid": "bpsr-sharpcombat-{d3f9a817-4c2b-4da1-8f7e-2b3c4a5e6f78}",
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}